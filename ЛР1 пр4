{
    class Program
    {
        static void Main(string[] args)
        {
            double pi = 3.14159;
            Console.WriteLine("Input x =\r");
            double x = 
            Convert.ToDouble(Console.ReadLine());
            double y = Math.Cos(pi * x) / (1 + x * x);
            Console.WriteLine(" x = {0} \t y = {1}", x, y);
            Console
	}
    }
